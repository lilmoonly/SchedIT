@model MyMvcApp.Models.LoginViewModel

@if (!User.Identity.IsAuthenticated)
{
    <h2>Увійти в систему</h2>
    <form asp-action="Index" method="post">
        <div>
            <label>Email</label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label>Пароль</label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password"></span>
        </div>
        <button type="submit">Увійти</button>
    </form>
    <a asp-controller="Account" asp-action="Register">Реєстрація</a>
}
else
{
    <h2>Вітаємо, @User.Identity.Name!</h2>
    <p>Ваша роль: 
        @{
            var role = User.IsInRole("Admin") ? "Адміністратор" :
                User.IsInRole("User") ? "Користувач" :
                User.IsInRole("SuperAdmin") ? "Головний Адміністратор" : "Невідома";
            @role
        }
    </p>
    <a asp-controller="Account" asp-action="Logout">Вийти</a>
}