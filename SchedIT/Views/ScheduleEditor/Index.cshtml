@model List<MyMvcApp.Models.Schedule>

<h1>Редагування розкладу</h1>

<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Час</th>
            <th>Предмет</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Time</td>
                <td>@item.Subject</td>
                <td>
                    <a asp-controller="ScheduleEditor" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                        Редагувати
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
