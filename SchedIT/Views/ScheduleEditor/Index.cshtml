@model List<MyMvcApp.Models.Schedule>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Редагування розкладу</h2>
    </div>


    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>День</th>
                <th>Час</th>
                <th>Предмет</th>
                <th>Викладач</th>
                <th>Аудиторія</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
    {
            <tr>
                <td>@item.DayEntry?.Value</td>
                <td>@item.TimeEntry?.Value</td>
                <td>@item.Subject?.Name</td>
                <td>
                    @item.Teacher?.FullName<br />
                    <small>@item.Teacher?.Position — @item.Teacher?.Faculty</small>
                </td>
                <td>
                    @item.Classroom?.Number, @item.Classroom?.Building<br />
                    <small>@item.Classroom?.Capacity місць, @item.Classroom?.Equipment</small>
                </td>
                <td>
                    <a asp-controller="ScheduleEditor" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                        Редагувати
                    </a>
                </td>
            </tr>
    }
            <tr>
                <td colspan="6">
                    <a class="btn btn-success" asp-action="Add">Додати</a>
                </td>
            </tr>
        </tbody>
    </table>
