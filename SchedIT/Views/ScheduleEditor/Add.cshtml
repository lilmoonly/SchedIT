@model MyMvcApp.Models.ScheduleFormViewModel

<h1>Додати пару</h1>

<form method="post">
    <div class="form-group">
        <label>День</label>
        <select asp-for="Schedule.DayEntryId" class="form-control" asp-items="Model.DayOptions"></select>
    </div>

    <div class="form-group">
        <label>Предмет</label>
        <select asp-for="Schedule.SubjectId" class="form-control" asp-items="Model.SubjectOptions"></select>
    </div>

    <div class="form-group">
        <label>Час</label>
        <select asp-for="Schedule.TimeEntryId" class="form-control" asp-items="Model.TimeOptions"></select>
    </div>

    <div class="form-group">
        <label>Викладач</label>
        <select asp-for="Schedule.TeacherId" class="form-control" asp-items="Model.TeacherOptions"></select>
        <small class="form-text text-muted">Формат: Ім'я (Посада) — Факультет</small>
    </div>

    <div class="form-group">
        <label>Аудиторія</label>
        <select asp-for="Schedule.ClassroomId" class="form-control" asp-items="Model.ClassroomOptions"></select>
        <small class="form-text text-muted">Формат: Номер, Будівля (Кількість місць)</small>
    </div>

    <button type="submit" class="btn btn-success mt-3">Додати</button>
</form>
