@model IEnumerable<MyMvcApp.Models.Teacher>

@{
    ViewData["Title"] = "Список викладачів";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Список викладачів</h2>
        <a class="btn btn-success" asp-action="Create">
            Додати викладача
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ПІБ викладача</th>
                    <th>Посада</th>
                    <th>Факультет</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model)
                {
                    <tr>
                        <td>@teacher.FullName</td>
                        <td>@teacher.Position</td>
                        <td>@teacher.Faculty?.Name</td>
                        <td>
                            <a asp-controller="TeacherEdit" asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-outline-primary btn-sm">
                                Редагувати
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
