@model IEnumerable<MyMvcApp.Models.Teacher>

@{
    ViewData["Title"] = "Список викладачів";
}

<h2>Список викладачів</h2>

<a asp-action="Create" class="btn btn-success">Додати викладача</a>

<table class="table">
    <thead>
        <tr>
            <th>Повне ім'я</th>
            <th>Посада</th>
            <th>Факультет</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.FullName</td>
                <td>@teacher.Position</td>
                <td>@teacher.Faculty</td>
                <td>
                    <a asp-controller="TeacherEdit" asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-warning">Редагувати</a>
                </td>
            </tr>
        }
    </tbody>
</table>
