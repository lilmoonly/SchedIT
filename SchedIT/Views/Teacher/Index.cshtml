@model IEnumerable<MyMvcApp.Models.Teacher>

    @{
    ViewData["Title"] = "Список викладачів";
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Список викладачів</h2>
    </div>


    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ПІБ викладача</th>
                <th>Посада</th>
                <th>Факультет</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
    {
            <tr>
                <td>@teacher.FullName</td>
                <td>@teacher.Position</td>
                <td>@teacher.Faculty</td>
                <td>
                    <a asp-controller="TeacherEdit" asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-warning">Редагувати</a>
                </td>
            </tr>
    }
            <tr>
                <td colspan="4">
                    <a class="btn btn-success" asp-action="Create">Додати</a>
                </td>
            </tr>
        </tbody>
    </table>
