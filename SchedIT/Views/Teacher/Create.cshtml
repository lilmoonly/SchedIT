@model MyMvcApp.Models.Teacher

@{
    ViewData["Title"] = "Додати викладача";
}

<h2>Додати викладача</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FullName" class="control-label">Повне ім'я</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Position" class="control-label">Посада</label>
        <select asp-for="Position" class="form-control">
            <option value="Доцент">Доцент</option>
            <option value="Асистент">Асистент</option>
            <option value="Професор">Професор</option>
        </select>
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Faculty" class="control-label">Факультет</label>
        <select asp-for="Faculty" class="form-control">
            <option value="ФПМІ">Факультет прикладної інформатики та a математики</option>
            <option value="ФММ">Факультет механіко математичний</option>
        </select>
        <span asp-validation-for="Faculty" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Зберегти</button>
    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
</form>
