@model IEnumerable<MyMvcApp.Models.Group>

@{
    ViewData["Title"] = "Список груп";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Список груп</h2>
        <a class="btn btn-success" asp-action="Create">
            Додати групу
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Назва групи</th>
                    <th>Факультет</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in Model)
                {
                    <tr>
                        <td>@group.Name</td>
                        <td>@group.Faculty?.Name</td>
                        <td>
                            <a asp-controller="GroupEdit" asp-action="Edit" asp-route-id="@group.Id" class="btn btn-outline-primary btn-sm">
                                Редагувати
                            </a>
                        </td>
                    </tr>
                }
                <tr>
                    
                </tr>
            </tbody>
        </table>
    </div>
</div>
