@model MyMvcApp.Models.GroupFormViewModel

@{
    ViewData["Title"] = "Додати групу";
}

<h2>Додати групу</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Group.Name" class="control-label">Назва</label>
        <input asp-for="Group.Name" class="form-control" />
        <span asp-validation-for="Group.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Факультет</label>
        <select asp-for="Group.Faculty" class="form-control" asp-items="Model.FacultiesOptions"></select>
    </div>

    <button type="submit" class="btn btn-primary">Зберегти</button>
    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
</form>
