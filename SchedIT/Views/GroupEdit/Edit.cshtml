@model MyMvcApp.Models.GroupFormViewModel

@{
    ViewData["Title"] = "Редагувати групу";
}

<h2>Редагувати групу</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Group.Id" />

    <div class="form-group">
        <label asp-for="Group.Name" class="control-label">Назва групи</label>
        <input asp-for="Group.Name" class="form-control" />
        <span asp-validation-for="Group.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Group.FacultyId" class="control-label">Факультет</label>
        <select asp-for="Group.FacultyId" class="form-control" asp-items="Model.FacultiesOptions">
            <option value="">Select Faculty</option>
        </select>
        <span asp-validation-for="Group.FacultyId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Зберегти</button>
    <a asp-controller="Group" asp-action="Index" class="btn btn-secondary">Скасувати</a>
</form>