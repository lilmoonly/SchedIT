@{
    ViewData["Title"] = "Оцінити розклад";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Оцінити розклад</h2>

            <form method="post">
                <div class="mb-3">
                    <label for="rating" class="form-label">Оцінка (від 0 до 5):</label>
                    <input type="number" id="rating" name="rating" min="0" max="5" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-success w-100">Відправити</button>
            </form>
        </div>
    </div>
</div>
