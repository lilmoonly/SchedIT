@model IEnumerable<MyMvcApp.Models.Schedule>

@{
    ViewData["Title"] = "Розклад";
}

<h2>Розклад</h2>
<br>

@foreach (var group in Model.GroupBy(s => s.DayEntry?.Value))
{
    <h4>@group.Key</h4>
    <table class="table table-bordered table-striped" style="table-layout: fixed; width: 100%;">
        <colgroup>
            <col style="width: 20%;" />
            <col style="width: 30%;" />
            <col style="width: 25%;" />
            <col style="width: 25%;" />
        </colgroup>
        <thead>
            <tr>
                <th>Час</th>
                <th>Предмет</th>
                <th>Викладач</th>
                <th>Аудиторія</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var schedule in group)
            {
                <tr>
                    <td>@schedule.TimeEntry?.Value</td>
                    <td>@schedule.Subject?.Name</td>
                    <td>@schedule.Teacher?.FullName</td>
                    <td>@schedule.Classroom?.Number, @schedule.Classroom?.Building</td>
                </tr>
            }
        </tbody>
    </table>
}
